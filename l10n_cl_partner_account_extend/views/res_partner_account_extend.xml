        <!-- Vista Kanban agrega RUT y elimina nombre Empresa en Prefijo nombre a visualizar-->
        <record model="ir.ui.view" id="res_partner_kanban_cl_extend">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban[1]/templates[1]/t[1]/div[1]/div[1]/strong[1]/field[@name='display_name']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//kanban[1]/templates[1]/t[1]/div[1]/div[1]/strong[1]/field[@name='display_name']" position="after">
                    <field name="name"/>
                    <div><h5><field name="vat" attrs="{'invisible': [('is_company','=',False)]}"/></h5></div>
                </xpath>            
            </field>
        </record>

        <!-- Agrega RUT a vista de Lista-->
        <record model="ir.ui.view" id="res_partner_tree_cl_extend">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="before">
                    <field name="name"/>
                </xpath>
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="vat" attrs="{'invisible': [('is_company','=',False)]}"/>
                </xpath>
                <xpath expr="//field[@name='email']" position="after">
                    <field name="total_due" widget="monetary"/>
                </xpath>
            </field>
        </record>

        <!-- Agrega bÃºsqueda por RUT y filtros para Empleados-->
        <record model="ir.ui.view" id="res_partner_search_cl_extend">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search[1]/field[@name='name']" position="after">
                    <field name="vat"/>
                  </xpath>
                  <xpath expr="//filter[@name='type_company']" position="after">
                    <filter domain="[['employee','=',True]]" name="cl_search_partner_extend_employee" string="Empleados"/>
                  </xpath>
                  <xpath expr="//field[@name='phone']" position="after">
                    <field name="ref"/>
                  </xpath>
                  <xpath expr="//filter[@name='group_country']" position="after">
                    <filter context="{'group_by': 'team_id'}" name="team_id" string="Equipo de ventas"/>
                  </xpath>
            </field>
        </record>

        <!-- Personaliza vista de Lista para Libro Diario -->
        <record model="ir.ui.view" id="res_account_move_tree_cl_extend">
            <field name="name">account.move.line</field>
            <field name="model">account.move.line</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit']" position="after">
                    <field name="balance" sum="Total Balance" string="Saldo" widget="monetary"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>

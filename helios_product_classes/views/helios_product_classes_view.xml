<?xml version="1.0"?>
<odoo>
    <data>
      
    <!-- Adding Helios Page and fields to the Product Form View -->

        <record id="helios_product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.inherit.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="helios" string="Info Helios">
                    <group name="helios_prod_class">
                        <group name="helios_prod_class_dim" string="Unidades y Dimensiones">
                            <label for="unidades"/>
                            <div name="unidades">
                                <field name="unidades"/>
                            </div>
                            <label for="largo"/>
                            <div name="largo">
                                <field name="largo"/>
                            </div>
                            <label for="ancho"/>
                            <div name="ancho">
                                <field name="ancho"/>
                            </div>
                            <label for="gramaje"/>
                            <div name="gramaje">
                                <field name="gramaje"/>
                            </div>
                        </group>
                        <group name="helios_prod_class_res" string="Recursos Producción">
                            <label for="lista"/>
                            <div name="lista">
                                <field name="lista"/>
                            </div>
                            <label for="ns"/>
                            <div name="ns">
                                <field name="ns"/>
                            </div>
                            <label for="ecobond"/>
                            <div name="ecobond">
                                <field name="ecobond"/>
                            </div>
                            <label for="mx"/>
                            <div name="mx">
                                <field name="mx"/>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>			
            	<!--<field name ="analytic_account_id" position="replace">
                            <field name="analytic_account_id" attrs="{'invisible': [('account_analytic_true', '==', True)]}"/>
            	</field>-->
            </field>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_chile_view" model="ir.ui.view">
        <field name="name">hr.contract.chile.view</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='salary_and_advantages']" position="after">

                <group name="wageother" string="Otras Prestaciones">
                <field name="otros_imp" string="Otros Imponible" invisible="1"/>
                <field name="otro_no_imp" string="Otros No Imponible" invisible="1"/>
				
                <div name="colacion">
                    <div class="text-muted">
                        <label string="Asig. de Colación" for="colacion"/>
                    </div>
                    <field name="colacion"/>
				</div>
                <div name="movilizacion">
                    <div class="text-muted">
                        <label string="Asig. de Movilización" for="movilizacion"/>
                    </div>
    				<field name="movilizacion"/>
                </div>
                <div name="viatico_santiago">
				    <div class="text-muted">
                        <label for="viatico_santiago" string="Asig. de Viático "/>
   				    </div>
					<field name="viatico_santiago"/>
			    </div>
                <div name="anticipo_sueldo">
                    <div class="text-muted">
                        <label string="Anticipo de Sueldo" for="anticipo_sueldo"/>
                    </div>
                    <field name="anticipo_sueldo"/>
				</div>
                </group>
			</xpath>

            <xpath expr="//field[@name='type_id']" posi0tion="replace">
                <field name="type_id" select="3"/>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="replace">
                <field name="journal_id" select="payroll_journal"/>
            </xpath>
            <xpath expr="//field[@name='resource_calendar_id']" position="replace">
                <field name="resource_calendar_id" select="hr_resource_monthly_cl"/>
            </xpath>
            <xpath expr="//page[@name='information']" position="after">
                <page string="Carga Familiar" name="information">
                    <group name="health1" string="Carga Familiar">
                        <field name="carga_familiar" string="Carga Simple"/>
                        <field name="carga_familiar_maternal"  string="Carga Maternal"/>
                        <field name="carga_familiar_invalida"  string="Carga Inválida"/>
                    </group>
                </page>
                <page string="Salud" name="health">
                    <group name="health2">
                        <group name="health3" string="Institución de Salud">
                            <div name="isapre_cotizacion_uf">
                                <div class="text-muted">
                                    <label string="Monto Pactado ISAPRE" for="isapre_cotizacion_uf"/>
                                </div>
                                <field name="isapre_cotizacion_uf"  attrs="{'invisible': [('isapre_id', '=', 1)]}" string="Cotización"/>
							</div>
                            <div name="isapre_moneda">
     							<div class="text-muted">
     							    <label for="isapre_moneda" string="Moneda ISAPRE "/>
     							</div>
    							<field name="isapre_moneda" attrs="{'invisible': [('isapre_id', '=', 1)]}"/>
    						</div>
                            <div name="isapre_id">
     							<div class="text-muted">
     							    <label for="isapre_id" string="ISAPRE "/>
     							</div>
     							<field name="isapre_id" required="1"/>
							</div>
                            <div name="isapre_fun">
                                <div class="text-muted">
                                    <label string="FUN Isapre" for="isapre_fun"/>
                                </div>
                                <field name="isapre_fun" attrs="{'invisible': [('isapre_id', '=', 1)]}"/>
							</div>
						</group>

                        <group name="health8" string="Seguro Complementario">
                            <div name="seguro_complementario">
                                <div class="text-muted">
                                    <label string="Monto Pactado Seguro" for="seguro_complementario"/>
                                </div>
                                <field name="seguro_complementario"/>
							</div>
                            <div name="seguro_complementario_moneda">
     							<div class="text-muted">
     							    <label for="seguro_complementario_moneda" string="Moneda Seguro "/>
     							</div>
    							<field name="seguro_complementario_moneda"/>
							</div>
                            <div name="seguro_complementario_id">
     							<div class="text-muted">
     							    <label for="seguro_complementario_id" string="Prestador Seguro"/>
     							</div>
    							<field name="seguro_complementario_id"/>
							</div>		
                        </group>
                    </group>
                </page>
                <page string="Fondos de Pensión" name="afp">
                    <group name="fondos">
                        <group name="pens" string="AFP">
   							<div class="text-muted">
   							    ¿Cotiza AFP?
   							</div>
                            <div name="pension">
                                <field name="pension" attrs="{'invisible': [('sin_afp', '==', True)]}"/>
								<label string="Pensionado (sin AFP)" for="pension" attrs="{'invisible': [('sin_afp', '==', True)]}"/>
							</div>
                            <div name="sin_afp">
                                <field name="sin_afp"/>
								<label string="No Cotiza AFP" for="sin_afp"/>
							</div>
                            <div name="afp_id">
     							<div class="text-muted">
     							    <label for="afp_id" string="AFP" attrs="{'invisible': [('pension', '!=', False)],'required': [('pension', '==', False)]}"/>
     							</div>
    							<field name="afp_id" attrs="{'invisible': [('pension', '!=', False)],'required': [('pension', '==', False)]}"/>
							</div>
                        </group>
                        <group name="APV" string="Aporte Previsional Voluntario">
                            <div name="aporte_voluntario">
     							<div class="text-muted">
     							    <label for="aporte_voluntario" string="Aporte Voluntario "/>
     							</div>
    							<field name="aporte_voluntario"/>
							</div>
    						<div name="aporte_voluntario">
     							<div class="text-muted">
     							    <label for="aporte_voluntario_moneda" string="Tipo Moneda APV "/>
     							</div>
    							<field name="aporte_voluntario_moneda"/>
							</div>
    						<div name="apv_id">
     							<div class="text-muted">
     							    <label for="apv_id" string="Prestador APV - APVC"/>
     							</div>
    							<field name="apv_id"/>
							</div>
                            <div name="forma_pago_apv">
     							<div class="text-muted">
     							    <label for="forma_pago_apv" string="Forma de Pago"/>
     							</div>
    							<field name="forma_pago_apv"/>
							</div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
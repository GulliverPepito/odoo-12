<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Estructura de menú "NÓMINA RRHH"  -->
        <menuitem id="menu_cl_hr_payroll_base" name="Nómina RRHH" parent="hr_payroll.menu_hr_payroll_root" sequence="2" groups="hr_payroll.group_hr_payroll_user"/>
        <menuitem id="menu_cl_hr_payroll_addons" name="Adicionales Nómina" parent="hr_payroll.menu_hr_payroll_root" sequence="3"/>
        <menuitem id="menu_cl_hr_payroll_indicators" name="Previsión" parent="hr_payroll.menu_hr_payroll_root" sequence="4" groups="hr_payroll.group_hr_payroll_user"/>
        <menuitem id="menu_cl_hr_payroll_master_data" name="Master Data" parent="hr_payroll.menu_hr_payroll_root" sequence="5"/>
        <menuitem id="menu_cl_hr_payroll_reports" name="Reports" parent="hr_payroll.menu_hr_payroll_root" sequence="11" groups="hr_payroll.group_hr_payroll_user"/>
        <menuitem id="menu_cl_hr_payroll_configuration" name="Chilean Configuration" parent="hr_payroll.menu_hr_payroll_configuration" sequence="101" groups="hr_payroll.group_hr_payroll_user"/>


        <!-- Menu items EMPLEADOS y CONTRATOS  -->
        <menuitem action="hr.open_view_employee_list_my"                 id="hr_menu_open_view_employee_list_my"   parent="hr_payroll.menu_hr_payroll_root"       sequence="0"/>
        <menuitem action="hr_contract.action_hr_contract"                id="hr_contract.hr_menu_contract"         parent="hr_payroll.menu_hr_payroll_root"       sequence="1"    groups="hr_contract.group_hr_contract_manager" name="Contracts"/>


        <!-- Menu NÓMINA RRHH -->
        <menuitem action="hr_payroll.action_hr_payslip_run_tree"         id="hr_payroll.menu_hr_payslip_run"       parent="menu_cl_hr_payroll_base"               sequence="1" groups="hr_payroll.group_hr_payroll_user"/>
        <menuitem action="hr_payroll.action_view_hr_payslip_form"        id="hr_payroll.menu_department_tree"      parent="menu_cl_hr_payroll_base"               sequence="2" groups="hr_payroll.group_hr_payroll_user"/>


        <!-- Menu DATOS MAESTROS -->
        <menuitem action="hr.action_hr_job"                              id="hr.menu_hr_job_tree"                  parent="menu_cl_hr_payroll_master_data"        sequence="2"    groups="hr_payroll.group_hr_payroll_user"/>
        <menuitem action="hr.open_module_tree_department"                id="hr.menu_hr_department_tree"           parent="menu_cl_hr_payroll_master_data"        sequence="3"    groups="hr.group_hr_user"/>
        <menuitem action="hr.open_view_categ_form"                       id="hr.menu_view_employee_category_form"  parent="menu_cl_hr_payroll_master_data"        sequence="4"    groups="hr.group_hr_user"/>
        <menuitem action="analytic.action_account_analytic_account_form" id="hr_account_analytic_def_account"      parent="menu_cl_hr_payroll_master_data"        sequence="5"    groups="analytic.group_analytic_accounting"/>
        <menuitem action="analytic.account_analytic_group_action"        id="hr_account_analytic_group_menu"       parent="menu_cl_hr_payroll_master_data"        sequence="6"    groups="analytic.group_analytic_accounting"/>
        <menuitem action="resource.action_resource_calendar_form"        id="hr_resource_calendar_form"            parent="menu_cl_hr_payroll_master_data"        sequence="7"    groups="hr_payroll.group_hr_payroll_user"/>
        <menuitem action="resource.action_resource_calendar_leave_tree"  id="hr_resource_calendar_leave_tree"      parent="menu_cl_hr_payroll_master_data"        sequence="8"    groups="hr_payroll.group_hr_payroll_user"/>


        <!-- Extiende Vista Formulario PUESTO DE TRABAJO -->
        <!-- Elimina campos Reclutamiento -->
        <record model="ir.ui.view" id="cl_view_hr_job_form">
            <field name="name">hr.job</field>
            <field name="model">hr.job</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='no_of_recruitment']" position="replace"/>
                <xpath expr="//button[@name='set_open']" position="replace"/>
                <xpath expr="//button[@name='set_recruit']" position="replace"/>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='recruitment']" position="attributes">
                    <attribute name="string">Human Resources</attribute>
                </xpath>
            </field>
        </record>

        <!-- Extiende Vista Lista REGLAS SALARIALES -->
        <!-- Agrega CUENTAS CONTABLES -->
        <record model="ir.ui.view" id="cl_view_hr_salary_rule_list">
            <field name="name">hr.salary.rule</field>
            <field name="model">hr.salary.rule</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="hr.salary.rule.list"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]/field[@name='name']" position="before">
                    <field name="active"/>
                </xpath>
                <xpath expr="//field[@name='register_id']" position="after">
                    <field name="appears_on_payslip"/>
                    <field name="account_debit"/>
                    <field name="account_credit"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
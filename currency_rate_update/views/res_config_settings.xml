<odoo>
    <data>
        <record id="view_account_config_inherit" model="ir.ui.view">
            <field name="name">Accounting settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='update_currency_live']" position="after">
                <!--<div id="update_currency_live" position="after">-->
                    <h2 groups="account.group_account_user">Chile Currency Rate Update</h2>
                    <div class="row mt16 o_settings_container" id="sbif_update" groups="account.group_account_user">
                       <div class="col-xs-12 col-md-6 o_setting_box" title="Allows automatic currency rate updates for Chile from SBIF." groups="account.group_account_user">
                            <div class="o_setting_left_pane">
                                <field name="auto_currency_up" class="oe_inline"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Auto-update from SBIF Chile" for="auto_currency_up"/>
                                <div class="text-muted">
                                    Enable SBIF Currency Rate Update for Chile
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container" id="sbif_accounts" groups="account.group_account_user">
                       <div class="col-xs-12 col-md-6 o_setting_box" title="Accounting settings Chile Curency Update." groups="account.group_account_user">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Chile Currency Rate Update</span>
                                <div class="text-muted">
                                    Configure your API Key for Automatica Currency Update from SBIF
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="api_key_sbif" class="col-lg-3 o_light_label"/>
                                        <field name="api_key_sbif"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <!--</div>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>

